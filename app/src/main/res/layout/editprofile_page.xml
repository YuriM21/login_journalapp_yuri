<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image_view"
            style="@style/CircleImageShape"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp" />

        <!--    Edit Profile Pic    -->
        <Button
            android:id="@+id/change_profile_pic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <!--    Edit full name    -->
        <EditText
            android:id="@+id/fullname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    Edit DOB    -->
        <EditText
            android:id="@+id/dateofbirth_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    Edit Address    -->
        <EditText
            android:id="@+id/address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    Edit Phone #    -->
        <EditText
            android:id="@+id/phonenumber_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    Edit username    -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    Edit password    -->
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginBottom="16dp"
            android:textColor="#0A0A0A"/>

        <!--    save changes   -->
        <Button
            android:id="@+id/save_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <!--    Delete Account    -->
        <Button
            android:id="@+id/delete_profile_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Delete Profile"
            android:backgroundTint="#CA3667"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>